@model PizzaOrderViewModel

<h2>Add Pizza</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="AddPizza" method="post">
            <input type="hidden" asp-for="OrderId" />
            <div class="form-group">
                <label asp-for="PizzaId" class="custom-control-label"></label>
                <select class="form-control" asp-for="PizzaId" asp-items="@(new SelectList(ViewBag.Pizzas, "Id", "Name"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="PizzaSize" class="custom-control-label"></label>
                <select class="form-control" asp-for="PizzaSize" asp-items="Html.GetEnumSelectList<PizzaSizeEnum>()"></select>
            </div>
            <input type="submit" value="Add"/>
        </form>
    </div>
</div>
