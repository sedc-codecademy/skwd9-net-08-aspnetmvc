<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="utf-8" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   <title>@ViewData["Title"] - SEDC.PizzApp</title>
   <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
   <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
<header>
   <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
      <div class="container">
         <a class="navbar-brand" asp-controller="Home" asp-action="Index">
            <img height="50" src="https://image.flaticon.com/icons/svg/1161/1161623.svg" />
         </a>
         <ul class="navbar-nav">
            <li class="nav-item">
               <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
               <a class="nav-link text-dark" asp-controller="Home" asp-action="Contact">Contact</a>
            </li>
            <li class="nav-item">
               <a class="nav-link text-dark" asp-controller="Home" asp-action="About">About</a>
            </li>
            <li class="nav-item">
               <a class="nav-link text-dark" asp-controller="Home" asp-action="Menu">Menu</a>
            </li>
            <li class="nav-item">
               <a class="nav-link text-dark" asp-controller="Order" asp-action="Index">Order</a>
            </li>
         </ul>
      </div>
   </nav>
</header>
<div class="container">
   <main role="main" class="pb-3">
      @RenderBody()
   </main>
</div>

<footer class="border-top footer text-muted">
   <div class="container">
      @DateTime.Now.Year - SEDC.PizzApp
   </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
