@model OrderViewModel

@{ ViewBag.Title = "Order Pizza"; }

<h1>Order pizza</h1>
<h3>@ViewBag.Error</h3>

@using (Html.BeginForm())
{
   <div class="row">
      <div class="col-md-6">
         <div class="input-group input-group-md">
            <span class="input-group-addon">@Html.LabelFor(x => x.FirstName)</span>
            @Html.TextBoxFor(x => x.FirstName, null,
               new {@class = "form-control"})
         </div>
      </div>
      <div class="col-md-6">
         <div class="input-group input-group-md">
            <span class="input-group-addon">@Html.LabelFor(x => x.LastName)</span>
            @Html.TextBoxFor(x => x.LastName,
               null,
               new {@class = "form-control"})
         </div>
      </div>
   </div>
   <div class="row">
      <div class="col-md-6">
         <div class="input-group input-group-md">
            <span class="input-group-addon">@Html.LabelFor(x => x.Address)</span>
            @Html.TextBoxFor(x => x.Address,
               null,
               new {@class = "form-control"})
         </div>
      </div>
      <div class="col-md-6">
         <div class="input-group input-group-md">
            <span class="input-group-addon">@Html.LabelFor(x => x.Phone)</span>
            @Html.TextBoxFor(x => x.Phone,
               null,
               new {@class = "form-control"})
         </div>
      </div>
   </div>
   @for (int i = 0; i < Model.ChosenPizzas.Count; i++)
   {
      <h1>Pizza no: @(i + 1)</h1>
      <div class="row">
         <div class="col-md-6">
            <div class="input-group input-group-md">
               <span class="input-group-addon">
                  @Html.LabelFor(expression: x => x.ChosenPizzas[i].PizzaName)
               </span>
               @Html.TextBoxFor(x => x.ChosenPizzas[i].PizzaName)
            </div>
         </div>
         <div class="col-md-6">
            <div class="input-group input-group-md">
               <span class="input-group-addon">
                  @Html.LabelFor(expression: x => x.ChosenPizzas[i].Size)
               </span>
               @Html.DropDownListFor(x => x.ChosenPizzas[i].Size,
                  Html.GetEnumSelectList(Model.ChosenPizzas[i].Size.GetType()))
            </div>
         </div>
      </div>
   }       
@*@Html.EditorFor(x => x.ChosenPizzas)*@

   <button class="btn btn-danger" type="submit">Order</button>
}