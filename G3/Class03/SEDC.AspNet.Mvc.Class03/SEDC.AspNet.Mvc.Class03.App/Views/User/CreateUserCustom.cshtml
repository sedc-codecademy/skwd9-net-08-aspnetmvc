@model SEDC.AspNet.Mvc.Class03.App.Models.ViewModels.CreateUserVM

<div class="row">
    <div class="col-12">
        <div class="alert alert-danger" role="alert">
            @{
                var errors = ViewContext.ViewData.ModelState.GetValueOrDefault("ProfileError")?.Errors;

                if(errors != null)
                {
                    foreach (var error in errors)
                    {
                        <span>@error.ErrorMessage</span>
                    }
                }

                }
        </div>
    </div>
    <form method="post">
        <div class="col-12">
            <label for="FirstName"> First name</label>
            <input type="text" name="FirstName" value="@Model?.FirstName"/>
        </div>
        <div class="col-12">
            <label for="LastName"> Last name</label>
            <input type="text" name="LastName" value="@Model?.LastName" />
        </div>
        <div class="col-12">
            <label for="Phone"> Phone</label>
            <input type="number" name="Phone" value="@Model?.Phone" />
        </div>
        <div class="col-12">
            <label for="Address"> Address</label>
            <input type="text" name="Address" value="@Model?.Address"/>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>