<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SEDC.AspNet.Mvc.Class03.App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    @*<a class="btn btn-primary" href="Home/Index/3">Home</a>*@
                    <ul class="navbar-nav flex-grow-1">
                        @*<li>@Html.ActionLink("Home", "Index", "Home", new { id = 3 }, new { @class = "btn btn-primary", value = "14" })</li>*@
                        <li class="nav-item mr-3">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li class="nav-item mr-3">@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li class="nav-item mr-3">@Html.ActionLink("About us", "About", "Home")</li>
                        <li class="nav-item mr-3">@Html.ActionLink("Orders", "Index", "Order")</li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <hr />
        <footer>
            <p>&copy; PizzaApp</p>
            <p>All rights reserved</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
